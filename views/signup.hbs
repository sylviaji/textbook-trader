<!-- Source: https://bootsnipp.com/snippets/org3M -->
<div class="container-fluid">
        <div class="row">
            <div class="col-md-1">
            </div>
            <div class="col-md-4">
                <form name="register-form" role="form" action="/register" method="POST" data-parsley-validate>
                    <fieldset>
                        <p class="text-uppercase pull-center"> Register </p>
                        <div class="form-group">
                            <input type="text" name="username_register" id="username-register" class="form-control input-lg" placeholder="Username" required>
                        </div>

                        <div class="form-group">
                            <input type="email" name="email" id="email" class="form-control input-lg" placeholder="Email Address" required>
                        </div>
                        <div class="form-group">
                            <input type="password" name="password_register" id="password-register" class="form-control input-lg" placeholder="Password" required data-parsley-minlength="6">
                        </div>
                        <div class="form-group">
                            <input type="password" name="password2" id="password2" class="form-control input-lg" placeholder="Confirm password" required data-parsley-minlength="6" data-parsley-equalto="#password-register">
                        </div>

                        <div>
                            <input type="submit" class="btn btn-outline-secondary" id="register" value="Register">
                        </div>
                    </fieldset>
                </form>
            </div>

            <div class="col-md-1">
            </div>

            <div class="col-md-4">
                <form role="form" action="/login" method="POST" data-parsley-validate>
                    <fieldset>
                        <p class="text-uppercase"> Login with existing account: </p>

                        <div class="form-group">
                            <input type="text" name="username" id="username" class="form-control input-lg" placeholder="Username" required>
                        </div>
                        <div class="form-group">
                            <input type="password" name="password" id="password" class="form-control input-lg" placeholder="Password" required data-parsley-minlength="6">
                        </div>
                        <div>
                            <input type="submit" class="btn btn-outline-secondary" value="Sign In" id="signin">
                        </div>

                    </fieldset>
                </form>
            </div>
        </div>
    </div>

</div>